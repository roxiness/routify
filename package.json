{
  "name": "@sveltech/routify",
  "version": "0.0.0-development",
  "description": "Routes for Svelte, automated by your file structure",
  "main": "lib/index.js",
  "svelte": "runtime/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sveltech/routify.git"
  },
  "author": "jakobrosenberg@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sveltech/routify/issues"
  },
  "homepage": "https://routify.dev",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sveltech/ssr": "^0.0.9",
    "@types/node": ">=4.2.0 < 13",
    "cheap-watch": "^1.0.2",
    "commander": "^5.0.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.0",
    "js-yaml": "^3.13.1",
    "json5": "^2.1.3",
    "log-symbols": "^3.0.0",
    "picomatch": "^2.2.1",
    "readdirp": "^3.3.0",
    "rollup-pluginutils": "^2.8.2",
    "yaml": "^1.9.2"
  },
  "bin": {
    "routify": "./plugins/cli.js"
  },
  "directories": {
    "runtime": "runtime",
    "lib": "lib",
    "test": "test"
  },
  "devDependencies": {
    "@rixo/eslint-config-svelte": "^0.8.0",
    "chalk": "^4.0.0",
    "chokidar-cli": "^2.1.0",
    "del-cli": "^3.0.0",
    "memfs": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "rewiremock": "^3.13.9",
    "semantic-release": "^17.0.4",
    "svelte": "^3.16.0",
    "testcafe": "^1.8.4",
    "typescript": "^3.8.3",
    "zoar": "^0.0.3",
    "zorax": "^0.0.5"
  },
  "scripts": {
    "eslint": "eslint lib plugins runtime",
    "prettier": "prettier \"{lib,plugins,runtime}/**/*.{js,svelte}\"",
    "lint": "npm run eslint",
    "lint:fix": "npm run prettier -- --write && npm run eslint -- --fix",
    "semantic-release": "semantic-release",
    "pretest": "cd example && npm install && npm run dev",
    "test": "cd test && ava tests/** --timeout 300s",
    "test:cli": "cd test && ava tests/cli/** --timeout 300s",
    "test:e2e": "cd test && ava tests/e2e/**",
    "test:mock-api": "cd test && ava tests/mock-server/**"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
