{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "strict": true
    },
    "include": [
        "src//.d.ts",
        "src/**/.ts",
        "src//*.js",
        "src//.svelte",
        "src/main.ts",
        "src/main.ts"
    ]
}
